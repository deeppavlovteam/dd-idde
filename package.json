{
	"name": "DD-IDDE",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"vscode:prepublish": "npm run tsc && npm run build -- --minify",
		"start": "npm run code && npm run watch",
		"code": "code --extensionDevelopmentPath=${pwd} ./test/test-flows/",
		"build": "npm run build-ext -- --minify && npm run build-webv -- --minify",
		"watch": "concurrently \"npm run build-ext -- --sourcemap --watch\" \"npm run build-webv -- --sourcemap --watch\" --names \"tsc-main,tsc-webview,esbuild-main,esbuild-webview\"",
		"build-ext": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
		"build-webv": "esbuild ./webview/main.ts --bundle --outfile=webview/main.js",
    "tsc": "tsc --noEmit --skipLibCheck -p ./ && tsc --noEmit -p ./webview",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"main": "./dist/main.js",
	"activationEvents": [
		"onCustomEditor:deeppavlov.dd-idde-graph"
	],
	"contributes": {
		"customEditors": [
			{
				"viewType": "deeppavlov.dd-idde-graph",
				"displayName": "DD-IDDE Dialog Designer",
				"selector": [
					{
						"filenamePattern": "*.py"
					}
				],
				"priority": "option"
			}
		]
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"devDependencies": {
		"@types/dagre": "^0.7.46",
		"@types/node": "^12.12.0",
		"@types/react": "^17.0.34",
		"@types/react-dom": "^17.0.11",
		"@types/vscode": "^1.47.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"concurrently": "^6.4.0",
		"esbuild": "^0.13.13",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"dagre": "^0.8.5",
		"goober": "^2.0.43",
		"nanoid": "^3.1.30",
		"python-shell": "^3.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-flow-renderer": "^9.6.11"
	}
}
